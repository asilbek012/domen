    <script>
        // 1. NEURAL CANVAS
        const canvas = document.getElementById('neural-canvas');
        const ctx = canvas.getContext('2d');
        canvas.width = window.innerWidth; canvas.height = window.innerHeight;
        let points = [];
        for(let i=0; i<70; i++) points.push({x: Math.random()*canvas.width, y: Math.random()*canvas.height, vx: (Math.random()-0.4), vy: (Math.random()-0.4)});

        function draw() {
            ctx.fillStyle = "rgba(0, 5, 5, 0.3)"; ctx.fillRect(0,0,canvas.width, canvas.height);
            points.forEach(p => {
                p.x += p.vx; p.y += p.vy;
                if(p.x<0||p.x>canvas.width) p.vx*=-1; if(p.y<0||p.y>canvas.height) p.vy*=-1;
                ctx.fillStyle = "#00f3ff"; ctx.beginPath(); ctx.arc(p.x, p.y, 1, 0, Math.PI*2); ctx.fill();
            });
            requestAnimationFrame(draw);
        }
        draw();

        // 2. REAL DEVICE DATA (Battery)
        navigator.getBattery().then(bat => {
            const update = () => { document.getElementById('bat-level').innerText = (bat.level * 100).toFixed(0) + "%"; };
            update(); bat.addEventListener('levelchange', update);
        });

        // 3. SPY LOGIC
        function scanDevices() {
            const list = document.getElementById('dev-list');
            list.innerHTML = "> SKANERLANMOQDA...";
            speak("Atrofdagi qurilmalar qidirilmoqda.");
            setTimeout(() => {
                list.innerHTML = `
                    <div onclick="targetReady('iPhone 15 Pro')" style="padding:8px; border-bottom:1px solid #222; cursor:pointer;">[+] iPhone 15 Pro - 192.168.0.4</div>
                    <div onclick="targetReady('Samsung S24')" style="padding:8px; border-bottom:1px solid #222; cursor:pointer;">[+] Samsung S24 - 192.168.0.7</div>
                `;
            }, 2000);
        }

        function targetReady(name) {
            document.getElementById('scanner-ui').style.display = 'none';
            document.getElementById('spy-ui').style.display = 'block';
            document.getElementById('spy-log').innerHTML = `> TARGET_LOCKED: ${name}<br>> WAITING_FOR_EXPLOIT...`;
            speak(name + " nishonga olindi. Kameraga ulanish kutilmoqda.");
        }

        async function accessCamera() {
            openApp('win-remote');
            const video = document.getElementById('remote-video');
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ video: true });
                video.srcObject = stream;
                video.style.display = "block";
                document.getElementById('spy-log').innerHTML += `<br><span style="color:var(--neon-green)">> CCTV_FEED_ACTIVE</span>`;
                speak("Jonli efir o'rnatildi.");
            } catch (err) {
                alert("Kameraga ruxsat berilmadi!");
            }
        }

        function downloadData() {
            let log = document.getElementById('spy-log');
            log.innerHTML += `<br>> O'G'IRLANMOQDA: /Photos/DCIM/...`;
            setTimeout(() => { 
                log.innerHTML += `<br>> MUVAFFARIYATLI! 4.2GB DATA YUKLANDI.`; 
                speak("Barcha ma'lumotlar bazaga ko'chirildi.");
            }, 3000);
        }

        // 4. UI HELPERS
        function toggleLauncher() { const d = document.getElementById('app-drawer'); d.style.display = (d.style.display === 'grid') ? 'none' : 'grid'; }
        function openApp(id) { toggleLauncher(); document.getElementById(id).style.display = 'flex'; }
        function toggle(id) { const w = document.getElementById(id); w.style.display = (w.style.display === 'none') ? 'flex' : 'none'; }
        function closeAll() { document.querySelectorAll('.window').forEach(w => w.style.display = 'none'); document.getElementById('app-drawer').style.display = 'none'; }
        function speak(t) { const s = new SpeechSynthesisUtterance(t); s.lang = 'uz-UZ'; window.speechSynthesis.speak(s); }

        // Window Dragging
        document.querySelectorAll('.window').forEach(win => {
            const h = win.querySelector('.win-header');
            h.onmousedown = (e) => {
                let sx = e.clientX - win.offsetLeft, sy = e.clientY - win.offsetTop;
                document.onmousemove = (e) => { win.style.left = e.clientX - sx + 'px'; win.style.top = e.clientY - sy + 'px'; };
                document.onmouseup = () => document.onmousemove = null;
            };
        });

        window.onload = () => speak("Tizim tayyor. Asilbek, ilohiy rejim faollashtirildi.");
    </script>
</body>
